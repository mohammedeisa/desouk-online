{% extends "SonataUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    <div class="nav-tabs-custom">
        {#<ul class="nav nav-tabs">#}
            {#<li class="active"><a href="#tab_1-1" data-toggle="tab"> الدخول</a></li>#}
            {#&#123;&#35;<li class=""><a href="#tab_2-2" data-toggle="tab">التسجيل</a></li>&#35;&#125;#}
        {#</ul>#}
        <div class="tab-content" >
            <div class="tab-pane active" id="tab_1-1">

                {% if error %}
                    <div class="alert alert-danger alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                      class="form-horizontal">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="form-group">
                        <label for="username"
                               class="col-lg-12 col-sm-12 control-label">
                            الاسم:
                        </label>

                        <div class="col-lg-12 col-sm-12">
                            <input type="text" class="form-control" id="username"
                                   name="_username" value="{{ last_username }}"
                                   required="required"/></div>
                    </div>


                    <div class="form-group control-group">
                        <label for="password"
                               class="col-lg-12 col-sm-12 control-label">
                            كلمة المرور
                        </label>

                        <div class="col-lg-12 col-sm-12"><input type="password" class="form-control" id="password"
                                                                name="_password" required="required"/></div>
                    </div>

                    {#<div class="form-group">#}
                        {#<div class="col-sm-offset-3 col-sm-6">#}
                            {#<div class="checkbox control-group">#}
                                {#<label for="remember_me">#}
                                    {#تذكرنى#}
                                    {#<input type="checkbox" id="remember_me" name="_remember_me" value="on"/>#}
                                {#</label>#}
                            {#</div>#}
                        {#</div>#}
                    {#</div>#}

                    {#<div class="form-group control-group">#}
                        {#<div class="controls col-sm-offset-3 col-sm-9">#}
                            {#<a href="{{ path('fos_user_resetting_request') }}">#}
                                {#نسيت كلمة المرور؟#}
                            {#</a>#}
                        {#</div>#}
                    {#</div>#}
                    <div class="form-group row-centered">
                        <div class="col-sm-offset-0 col-sm-6 col-centered">
                            <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                                   value="تسجيل الدخول"/>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.tab-pane -->
            {#<div class="tab-pane" id="tab_2-2" style="padding: 0 15px;">#}
                {#{% render controller("FOSUserBundle:Registration:register") %}#}
            {#</div>#}
            <!-- /.tab-pane -->
        </div>
        <!-- /.tab-content -->
    </div>
{% endblock fos_user_content %}
