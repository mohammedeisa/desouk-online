{% extends 'base.html.twig' %}
{% block seo %}
        {% if config['generalConfig'] and  config['bundleConfig'] %}
            {% block website_meta_title %}
                <meta name="title" content="{{ config.generalConfig.generalModulesPreTitle~'|'~config.generalConfig.jobMiddleOfTitleInIndex }}"/>
            {% endblock %}
            {% block website_description %}
                <meta name="description" content="{{ config.bundleConfig.metaDescription }}"/>
            {% endblock %}
            {% block og_title %}
                <meta property="og:title" content="{{ config.generalConfig.generalModulesPreTitle~'|'~config.generalConfig.jobMiddleOfTitleInIndex }}"/>
            {% endblock %}
            {% block og_description %}
                <meta property="og:description" content="{{ config.bundleConfig.metaDescription }}"/>
            {% endblock %}
            {% block og_type %}
                <meta property="og:type" content="article"/>
            {% endblock %}
        {% endif %}
    {% endblock %}

{% block inner_content %}
    <div id="mall_category" class="">
        <div class="container">
            <div class="center">
                <h3>وظايف دسوق</h3>
                {% include 'horizontal_social.html.twig' %}
            </div>
            <hr>
            {% for job in jobs %}
                <div class="row-fluid post">
                    <div class="span7">
                        <a href="{{ path('job',{'slug':job.slug}) }}"><h3>{{ job.title }}</h3></a>

                        <div class="meta">
                            <span>االمعلن: </span>
                            <span class="author"><a href="#"> {{ job.owner }}</a></span>
                            <span>تاريخ الاعلان</span>
                            <span class="author"><a href="#"> {{ job.updatedAt|date('Y/m/d') }}</a></span>
                        </div>
                        <p>
                            {{ job.description|striptags|slice(0, 90) }}
                            <a href="{{ path('job',{'slug':job.slug}) }}" class="button">المزيد</a>
                        </p>
                    </div>
                </div>
                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}