<section id="">
    <img src="{% path portfolio.image , 'large' %}"/>

    <div class="row">
        <div class="center"> {{ portfolio.description|raw }}</div>
            {% for item in portfolio.getPortfolioItems() %}
                <div class="col-md-3 col-xs-6">
                    <img src="{% path item.image,'preview' %}" alt="">

                    <div class="overlay">
                        <a class="preview btn btn-danger" title="Lorem ipsum dolor sit amet"
                           href="{% path item.image,'large' %}"><i class="icon-eye-open"></i></a>
                    </div>
                    <h5>{{ item.title }}</h5>
                </div>
            {% endfor %}
            <!--/.portfolio-item-->

        <div></div>
    </div>

</section>