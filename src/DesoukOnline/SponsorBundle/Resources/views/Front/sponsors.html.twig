<section id="about-us">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>الرعاة الرسميين لدسوق اونلاين</h3>
            </div>
            <div class="gap"></div>
            <div id="team-scroller" class="carousel scale">
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="row">
                            {% for sponsor in sponsors %}
                            {% if loop.index%5==0 %}
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            {% endif %}
                            <div class="col-sm-3">
                                <div class="member">
                                    <p><img class="img-responsive img-thumbnail img-circle"
                                            src="{% path sponsor.image , 'preview' %}" alt=""></p>

                                    <h3>{{ sponsor.title|capitalize }}
                                        <small class="designation">{{ sponsor.description|slice(1,60) }}</small>
                                    </h3>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <a class="left-arrow" href="#team-scroller" data-slide="prev">
                    <i class="icon-angle-left icon-4x"></i>
                </a>
                <a class="right-arrow" href="#team-scroller" data-slide="next">
                    <i class="icon-angle-right icon-4x"></i>
                </a>
            </div>
            <!--/.carousel-->
        </div>
        <!--/.box-->
    </div>
    <!--/.container-->
</section><!--/#about-us-->
