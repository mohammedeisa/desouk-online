{% extends 'base.html.twig' %}
{% block seo %}
    {% if config['generalConfig'] and  config['bundleConfig'] %}
        {% block website_meta_title %}
            <meta name="title" content="{{config.generalConfig.generalModulesPreTitle~'|'~config.generalConfig.jobMiddleOfTitleInShow~'|'~job.title}}"/>
        {% endblock %}
        {% block website_description %}
            <meta name="description" content="{{ job.summary }}"/>
        {% endblock %}
        {% block og_title %}
            <meta property="og:title"
                  content="{{config.generalConfig.generalModulesPreTitle~'|'~config.generalConfig.jobMiddleOfTitleInShow~'|'~job.title}}"/>
        {% endblock %}
        {% block og_description %}
            <meta property="og:description" content="{{ job.summary }}"/>
        {% endblock %}
        {% block og_author %}
            {#<meta property="article:author" content="دسوق اون لاين"/>#}
        {% endblock %}
        {% block og_type %}
            <meta property="og:type" content="دسوق اون لاين"/>
        {% endblock %}
    {% endif %}
{% endblock %}
{% block inner_content %}
    <div id="mall_category" class="">
        <div class="container">
            <div class="center">
                <h3>{{ job.title }}</h3>
                {% include 'horizontal_social.html.twig' %}
            </div>
            <hr>

            <div class="meta">
                    <span>
                        <strong>
                            االمعلن :
                        </strong>
                    </span>
                <span class="author"><a href="#">{{ job.owner }}</a></span>
                <span><strong>تاريخ الاعلان :</strong></span>
                <span class="author"><a href="#"> {{ job.updatedAt|date('Y/m/d') }}</a></span>
            </div>
            <p>{{ job.description|raw }}</p>
        </div>
    </div>
{% endblock %}