{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ delivery.title }} </h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                   {{ include('DesoukOnlineDeliveryBundle:Front:User/userMenu.html.twig', { 'selected': 'menu' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
		            	{{ form_start(product_form) }}
                		{{ form_row(product_form.title) }}
                		{{ form_row(product_form.description) }}
                		{{ form_row(product_form.price) }}
                		{{ form_row(product_form.file) }}
                		{{ form_widget(product_form) }}
						{{ form_end(product_form) }}
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}