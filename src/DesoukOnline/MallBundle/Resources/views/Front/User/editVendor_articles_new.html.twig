{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ vendor.title }}</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                	{{ include('DesoukOnlineMallBundle:Front:User/userMenu.html.twig', { 'selected': 'article' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
					<h3>إضافة مقال جديد</h3>
		            <div id="vendor_edit_form">
		            	{{ form_start(article_form) }}
                		{{ form_widget(article_form) }}
						{{ form_end(article_form) }}
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}