{% extends 'base.html.twig' %}
{% block content %}
    <!-- Page Content -->
    <section id="vendor_homepage">
        <div class="container">
            <div class="box">
                <div class="row">
                    <div class="col-md-3">
                        <p class="lead">{{ vendor.title|capitalize }}</p>

                        <div class="list-group">
                            {% for category in vendor.getVendorProductCategories() %}
                                <a href="{{ path('vendor_product_category',{'slug':category.slug}) }}"
                                   class="list-group-item">{{ category.title }}</a>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="col-md-9">
                        {% if vendor.banners %}

                            <div class="row carousel-holder">

                                <div class="col-md-12">
                                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            {% for image in vendor.banners.galleryHasMedias %}
                                                <li data-target="#carousel-example-generic"  {{ (loop.index==1)?'class="active"':'' }}
                                                    data-slide-to="{{ loop.index }}"></li>
                                            {% endfor %}
                                        </ol>
                                        <div class="carousel-inner">
                                            {% for image in vendor.banners.galleryHasMedias %}
                                                <div class="item {{ (loop.index==1)?'active':'' }}">
                                                    <img class="slide-image" src="{% path image.media, 'large' %}"
                                                         alt="">
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a class="left carousel-control" href="#carousel-example-generic"
                                           data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="right carousel-control" href="#carousel-example-generic"
                                           data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>


                            </div>
                        {% endif %}
                        <div class="row">
                            {% for category in vendor.getVendorProductCategories if category.isInHome %}
                                <div class="row">
                                    <div class="col-sm-12 col-lg-12 col-md-12">

                                        <div class="left">
                                            <h3>
                                                <a class=""
                                                   href="{{ path('vendor_product_category',{'slug':category.slug}) }}"
                                                   role="button">{{ category.title }}</a>
                                            </h3>
                                        </div>
                                    </div>
                                    {% for product in category.products if product.isInHome %}
                                        <div class="col-sm-4 col-lg-4 col-md-4">
                                            <div class="thumbnail">
                                                <img src="{% path product.image , 'preview' %}" alt="">

                                                <div class="caption">
                                                    <h4 class="pull-right">{{ product.price }} LE</h4>
                                                    <h4>
                                                        <a href="{{ path('vendor_product',{'slug':product.slug}) }}">{{ product.name }}</a>
                                                    </h4>

                                                    {{ product.description|raw }}
                                                </div>
                                                <div class="ratings">
                                                    <p class="pull-right">15 reviews</p>

                                                    <p>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                        <span class="glyphicon glyphicon-star"></span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    <div class="row"></div>
                                    <div class="col-sm-12 col-lg-12 col-md-12">

                                        <a class="pull-right btn btn-primary btn-lg"
                                           href="{{ path('vendor_product_category',{'slug':category.slug}) }}"
                                           role="button">See more</a>
                                    </div>
                                </div>
                                <hr>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </section>

{% endblock %}