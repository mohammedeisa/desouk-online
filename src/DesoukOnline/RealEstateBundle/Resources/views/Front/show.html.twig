{% extends 'base.html.twig' %}
{% block content %}
    <!-- Page Content -->
    <section id="mall_category" class="inner_page">
        <div class="container">
            <div class="reaestate_box">
               {{ render(controller('DesoukOnlineRealEstateBundle:Front:sideFilter', { 'parent_request': app.request })) }}
                <div class="reaestate_items col-4">
                        <div class="reaestate_item apps">
                            <div class="reaestate_item_inner">
                                <div class="realestate_title">
                                    <a href="{{ path('realestate_show',{'slug':realestate.slug}) }}">{{ realestate.title }}</a>
                                </div>
                                <div class="realestate_properities">
                                	<div>السعر : <span>{{realestate.price}} جنيه</span></div>
                                	<div>
                                		النوع : <span>{{realestate.type}}</span>
                                	</div>
                                	<div >
                                		الغرض : <span>{{realestate.purpose}}</span>
                                	</div>
                                </div>
                                {% if has_slider %}
	
	                                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="padding-right: 20px;">
	                                            <ol class="carousel-indicators">
	                                            	<li data-target="#carousel-example-generic"  class="active" data-slide-to="0"></li>
	                                                {% for image in realestate.images %}
	                                                    <li data-target="#carousel-example-generic"  data-slide-to="{{ loop.index }}"></li>
	                                                {% endfor %}
	                                            </ol>
	                                            <div class="carousel-inner">
	                                            	<div class="item active">
                                                        <img class="slide-image" src="{{realestate.getWebPath()}}" alt="">
                                                    </div>
	                                                {% for image in realestate.images %}
	                                                    <div class="item ">
	                                                        <img class="slide-image" src="{{image.getWebPath()}}" alt="">
	                                                    </div>
	                                                {% endfor %}
	                                            </div>
	                                            <a class="left carousel-control" href="#carousel-example-generic"
	                                               data-slide="prev">
	                                                <span class="glyphicon glyphicon-chevron-left"></span>
	                                            </a>
	                                            <a class="right carousel-control" href="#carousel-example-generic"
	                                               data-slide="next">
	                                                <span class="glyphicon glyphicon-chevron-right"></span>
	                                            </a>
	                                        </div>
	
	
	                            {% endif %}
                                <div class="realestate_summary">
                                    {{ realestate.description|raw }}
                                </div>
                            </div>
                        </div><!--/.portfolio-item-->
                </div>
            </div>
            <!--/.box-->
        </div>
        <!--/.container-->
    </section>
{% endblock %}
