{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ vendor.title }}</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                   <ul id = "vedor_user_menu">
		                <li><a class="btn btn-primary active"  >إدارة بيانات المحل </a></li>
		                <li><a class="btn btn-primary" href="#" >إدارة الأقسام</a></li>
		                <li><a class="btn btn-primary" href="#" >إدارة المنتجات</a></li>
		                <li><a class="btn btn-primary" href="#" >إدارة المقالات</a></li>
		            </ul>
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
		            	{{ form_start(form) }}
		            	{{ form_row(form.title) }}
		            	{{ form_row(form.category) }}
		            	{{ form_row(form.file) }}
		            	<div class="form-group ">
		            		<img width="100" height="100" src="{{ vendor.getWebPath() }}">
	            		</div>
						{{ form_widget(form) }}
						{{ form_end(form) }}
	                    <div class="raw">
	                        <div class="panel panel-default">
	                            <div class="panel-heading">
	                                البانرات "يمكنك إضافة 5 بانر"
	                            </div>
	                            <!-- /.panel-heading -->
	                            <div class="panel-body">
	                            	{% if vendor.images|length < 5 %}
	                            	<div>
	                            		{{ form_start(vendor_image_form) }}
	                            		{{ form_widget(vendor_image_form) }}
										{{ form_end(vendor_image_form) }}
	                            	</div>
	                            	{% endif %}
                                    <table class="table table-striped table-bordered table-hover ">
                                        <tbody role="alert">
                                        {% for image in vendor.images %}

                                            <tr>
                                                <td><img width="200"  src="{{ image.getWebPath() }}"></td>
                                                <td><a href="{{ path('front_vendor_deleteImge',{'vendor':vendor.id,'image_id':image.id}) }}">حذف</a></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
	                            </div>
	                            <!-- /.panel-body -->
	                        </div>
	                    </div>
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}