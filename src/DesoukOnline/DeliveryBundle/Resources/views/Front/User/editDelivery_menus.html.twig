{% extends 'base.html.twig' %}
{% block inner_content %}
<!-- Page Content -->
<section id="mall" class="">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ delivery.title }}</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                   {{ include('DesoukOnlineDeliveryBundle:Front:User/userMenu.html.twig', { 'selected': 'menu' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
	                    <div class="raw">
	                    	<div class="user_new_form">
                        		{{ form_start(menu_form) }}
                        		{{ form_widget(menu_form) }}
								{{ form_end(menu_form) }}
                        	</div>
	                        <div class="panel panel-default">
	                            <div class="panel-heading">
	                                المنيوهات المضافة
	                            </div>
	                            <!-- /.panel-heading -->
	                            <div class="panel-body">
                                    <table class="table table-striped table-bordered table-hover ">
                                        <tbody role="alert">
                                        {% for menu in delivery.menus %}

                                            <tr>
                                                <td width="50%">{{menu.title}}</td>
                                                <td><a href="{{ path('front_editVendor_categories_edit',{'category_id':menu.id}) }}">تعديل</a></td>
                                                <td><a href="{{ path('front_vendor_deleteCategory',{'vendor':delivery.id,'category_id':menu.id}) }}">حذف</a></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
	                            </div>
	                            <!-- /.panel-body -->
	                        </div>
	                    </div>
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}