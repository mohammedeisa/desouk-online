{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ delivery.title }}</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                	{{ include('DesoukOnlineDeliveryBundle:Front:User/userMenu.html.twig', { 'selected': 'delivery' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
		            	{{ form_start(form) }}
		            	{{ form_row(form.title) }}
		            	{{ form_row(form.description) }}
		            	{{ form_row(form.file) }}
		            	<div class="form-group ">
		            		<img width="100" height="100" src="{{ delivery.getWebPath() }}">
	            		</div>
						{{ form_widget(form) }}
						{{ form_end(form) }}
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}