{% extends 'base.html.twig' %}
{% block content %}
    <!-- Page Content -->
    <section id="mall_category" class="inner_page">
        <div class="container">
            <div class="reaestate_box">
                <div class="center">
                    <h3>عقارات دسوق</h3>
                </div>
               {{ render(controller('DesoukOnlineRealEstateBundle:Front:sideFilter', { 'purpose': app.request.get('purpose'),'type': app.request.get('type'),'area': app.request.get('area') })) }}
                <ul class="reaestate_items col-4">
                    {% for realestate in realestates %}
                        <li class="reaestate_item apps">
                            <div class="reaestate_item_inner">
                                <div class="realestate_image">
                                    <a href="{{ path('realestate_show',{'slug':realestate.slug}) }}">
                                        <img src="{{realestate.getWebPath()}}" alt="">
                                    </a>
                                </div>
                                <div class="realestate_title">
                                    <a href="{{ path('realestate_show',{'slug':realestate.slug}) }}">{{ realestate.title }}</a>
                                </div>
                                <div class="realestate_properities">
                                	<div>السعر : <span>{{realestate.price}} جنيه</span></div>
                                	<div>
                                		النوع : <span>{{realestate.type}}</span>
                                	</div>
                                	<div >
                                		الغرض : <span>{{realestate.purpose}}</span>
                                	</div>
                                </div>
                                <div class="realestate_summary">
                                    {{realestate.summary}}
                                </div>
                            </div>
                        </li><!--/.portfolio-item-->
                    {% endfor %}
                </ul>
            </div>
            <!--/.box-->
        </div>
        <!--/.container-->
    </section>
{% endblock %}