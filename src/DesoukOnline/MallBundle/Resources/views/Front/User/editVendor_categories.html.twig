{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ vendor.title }}</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                   {{ include('DesoukOnlineMallBundle:Front:User/userMenu.html.twig', { 'selected': 'category' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
	                    <div class="raw">
	                        <div class="panel panel-default">
	                            <div class="panel-heading">
	                                الأقسام
	                            </div>
	                            <!-- /.panel-heading -->
	                            <div class="panel-body">
	                            	<div class="user_new_form">
	                            		{{ form_start(vendor_product_category_form) }}
	                            		{{ form_widget(vendor_product_category_form) }}
										{{ form_end(vendor_product_category_form) }}
	                            	</div>
                                    <table class="table table-striped table-bordered table-hover ">
                                        <tbody role="alert">
                                        {% for category in categories %}

                                            <tr>
                                                <td width="50%">{{category.title}}</td>
                                                <td><a href="{{ path('front_editVendor_categories_edit',{'category_id':category.id}) }}">تعديل</a></td>
                                                <td><a href="{{ path('front_vendor_deleteCategory',{'vendor':vendor.id,'category_id':category.id}) }}">حذف</a></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
	                            </div>
	                            {{ knp_pagination_render(categories) }}
	                            <!-- /.panel-body -->
	                        </div>
	                    </div>
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}