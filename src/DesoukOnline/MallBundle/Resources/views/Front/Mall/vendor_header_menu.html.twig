<div id="vendor_header_menu_container" class="col-md-12">
    <div id="navbar" class="navbar navbar-default vendor_header_menu">
        <div class="">
            <div class="row">
                <div class="col-md-4" id="vendor_logo_container">
                    {% if vendor.file is defined %}
                        <a href="">
                            <img src="{{ vendor.getWebPath() }}">
                        </a>
                    {% endif %}
                </div>
                <div class="col-md-4 col-xs-7" id="header_vendor_name_container">
                    <a id="vendor_name" href="{{ path('vendor',{'slug':vendor.slug}) }}">{{ vendor.title|capitalize }}</a>
                </div>

                <div class="col-md-4" id="vendor_menu_contacts" style="color: #555">
                    {% if vendor.telephone %}
                        <div class="vendor_contact">
                            <i class="fa fa-mobile-phone fa-fw" id="header_menu_tel_icon"></i>{{ vendor.telephone }}
                        </div>
                    {% endif %}
                    {% if vendor.email %}
                        <div class="vendor_contact">
                            <i class="fa fa-envelope-o fa-fw"></i><span class="vendor_email">{{ vendor.email }}</span>
                        </div>
                    {% endif %}
                    {% if vendor.facebook %}
                        <div class="vendor_contact" style="color: #44619D">
                            <i class="fa fa-facebook-official fa-fw"></i><a href="{{ vendor.facebook }}"
                                                                            style="color: #44619D"><span
                                        class="vendor_email">صفحتنا على الفيسبوك</span></a>
                        </div>
                    {% endif %}

                </div>
                </ul>
            </div>
        </div>
    </div>