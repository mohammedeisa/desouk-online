{% extends 'base.html.twig' %}
{% block content %}
    <!-- Page Content -->
    <section id="search_page" class="inner_page">
        <div class="container">
            <div class="box">
                <div class="row">
                    <div class="left">
                        <h4>
                            نتايج البحث عن "{{ search }}"
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <h3>منتجات دسوق مول</h3>

                    <div class="col-md-12">
                        {% for product in mall_products %}
                            <div class="col-sm-3 col-lg-3 col-md-3  portfolio-item">
                                <div class="thumbnail">
                                    <a href="{{ path('vendor_product',{'slug':product.slug}) }}">
                                        <img src="{% path product.image , 'preview' %}" alt="">
                                    </a>

                                    <div class="caption">
                                        <h4 class="pull-right">{{ product.price }} LE</h4>
                                        <h4 class="product_name">
                                            <a href="{{ path('vendor_product',{'slug':product.slug}) }}">{{ product.name }}</a>
                                        </h4>
                                        {{ product.description|striptags|slice(0, 90) }}
                                        <a href="{{ path('vendor_product',{'slug':product.slug}) }}">see more </a>
                                    </div>
                                    <div class="ratings">
                                        <p class="pull-right">15 reviews</p>
                                        <p class="stars">
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <hr>
            </div>
        </div>
    </section>
{% endblock %}