{% extends 'base.html.twig' %}
{% block content %}
    <section id="vendor_product_category" class="inner_page">
        <div class="container">
            <div class="box">
                <div class="row">
                    {{ render(controller('DesoukOnlineMallBundle:Front:vendorMenu',{'slug':vendor_product_category.vendor.slug})) }}
                    <div class="col-md-9 ">
                        <div class="upper_data">
                            <div id="social_items">
                                {% include 'horizontal_social.html.twig' %}
                            </div>
                            <div id="centered_text">
                                <h4>{{ vendor_product_category.title }}</h4>
                                <p class="lead">{{ vendor_product_category.description|raw }}</p>
                            </div>
                            <div id="logo">
                                {% if vendor_product_category.vendor.logo is defined %}
                                    <img src="{% path vendor_product_category.vendor.logo, 'preview' %}">
                                {% endif %}
                            </div>
                        </div>

                        {% for product in category_products %}

                            <div class="col-sm-4 col-lg-4 col-md-4  portfolio-item">
                                <div class="thumbnail">
                                    <a href="{{ path('vendor_product',{'slug':product.slug}) }}">
                                        <img src="{% path product.image , 'preview' %}" alt="">
                                    </a>

                                    <div class="caption">
                                        <h4 class="pull-left">{{ product.price }} جنية</h4>
                                        <h4>
                                            <a href="{{ path('vendor_product',{'slug':product.slug}) }}">{{ product.name }}</a>
                                        </h4>

                                        {{ product.description|striptags|slice(0, 90) }}
                                        <a href="{{ path('vendor_product',{'slug':product.slug}) }}">
                                            المزيد </a>
                                    </div>
                                    <div class="desouk_online_rating">
                                        {{ ("vendor_product_"~product.id)|show_rating|raw }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {{ knp_pagination_render(category_products) }}
            </div>
            <!--/.box-->
        </div>
        <!--/.container-->
    </section>
{% endblock %}