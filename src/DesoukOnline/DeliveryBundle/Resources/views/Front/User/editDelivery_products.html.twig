{% extends 'base.html.twig' %}
{% block content %}
<!-- Page Content -->
<section id="mall" class="inner_page">
    <div class="container">
        <div class="box">
            <div class="center">
                <h3>{{ delivery.title }} </h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                   {{ include('DesoukOnlineDeliveryBundle:Front:User/userMenu.html.twig', { 'selected': 'menu' }) }}
		            {% for flashMessage in app.session.flashbag.get('success') %}
		            	<div class="alert alert-success">
						    <a href="#" class="close" data-dismiss="alert">&times;</a>
						    <strong>{{ flashMessage }}</strong> 
						</div>
					{% endfor %}
		            <div id="vendor_edit_form">
	                    <div class="raw">
	                        <div class="panel panel-default">
	                            <div class="panel-heading">
	                                الاصناف فى {{ menu.title }}
	                            </div>
	                            <!-- /.panel-heading -->
	                            <div class="panel-body">
	                            	<div class="user_new_form">
	                            		<ul id = "vedor_user_menu">
									    	<li><a class="btn btn-primary "  href="{{ path('front_editDelivery_products_new',{'menu_id':menu.id}) }}">إضافة صنف جديد </a></li>
										</ul>
	                            	</div>
                                    <table class="table table-striped table-bordered table-hover ">
                                        <tbody role="alert">
                                        {% for product in menu.menuItems %}

                                            <tr>
                                                <td width="50%">{{product.title}}</td>
                                                <td><a href="{{ path('front_editDelivery_products_edit',{'product_id':product.id}) }}">تعديل</a></td>
                                                <td><a href="{{ path('front_delivery_deleteProduct',{'menu_id':menu.id,'product_id':product.id}) }}">حذف</a></td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
	                            </div>
	                            <!-- /.panel-body -->
	                        </div>
	                    </div>
						
		            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>
{% endblock %}