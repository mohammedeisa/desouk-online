{% extends 'base.html.twig' %}
{% block seo %}
    {% if config['generalConfig'] and  config['bundleConfig'] %}
        {% block website_meta_title %}
            <meta name="title" content="{{ config.generalConfig.mallPreTitle~'|'~category.title }}"/>
        {% endblock %}
        {% block website_description %}
            <meta name="description" content="{{ category.summary }}"/>
        {% endblock %}
        {% block og_image %}
            <meta property="og:image" content="{{ asset('images/logo.jpg') }}"/>
            <meta property="og:image:secure_url" content="{{ app.request.uri }}"/>
        {% endblock %}
        {% block og_title %}
            <meta property="og:title" content="{{ config.generalConfig.mallPreTitle~'|'~category.title }}"/>
        {% endblock %}
        {% block og_description %}
            <meta property="og:description" content="{{ category.summary }}"/>
        {% endblock %}
    {% endif %}
{% endblock %}

{% block inner_content %}
    <!-- Page Content -->
    <div id="mall_category" class="">
        <div class="center">
            <h3>{{ category.title }}</h3>
            {{ category.description|raw }}
            {% include 'horizontal_social.html.twig' %}
        </div>
        <div class="row">
            {{ render(controller('DesoukOnlineMallBundle:Front:mallCategoriesMenu')) }}
            {% for vendor in category_vendors %}
                <div class="col-md-3 col-xs-12 mall_category_in_category">
                    <a class="category_logo_link" href="{{ path('vendor',{'slug':vendor.slug}) }}">
                        <img src="{{ vendor.getWebPath() }}" alt="">
                    </a>
                    <h5><a href="{{ path('vendor',{'slug':vendor.slug}) }}">{{ vendor.title }}</a></h5>
                </div><!--/.portfolio-item-->
            {% endfor %}
        </div>
        {{ knp_pagination_render(category_vendors) }}
        <!--/.container-->
    </div>

{% endblock %}