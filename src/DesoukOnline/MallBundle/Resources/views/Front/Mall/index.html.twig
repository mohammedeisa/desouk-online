{% extends 'base.html.twig' %}
{% block inner_content %}
    <!-- Page Content -->
    <div id="mall" >
        {% if config is defined %}
            <div class="center">
                <h3>{{ config.mallTitle }}</h3>

                <p class="lead">{{ config.mallDescription|raw }}</p>
                {% include 'horizontal_social.html.twig' %}
            </div>
        {% endif %}
        {% if categories is defined %}
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="row">
                                    {% for category in categories %}
                                        <div class="col-sm-3">
                                            <div class="member">
                                                <p>
                                                    <a href="{{ path('mall_category',{'slug':category.slug}) }}">
                                                        <img class="img-responsive img-thumbnail img-circle"
                                                             src="{% path category.image, 'preview' %}" alt="">
                                                    </a>
                                                </p>

                                                <h3>
                                                    <a href="{{ path('mall_category',{'slug':category.slug}) }}">{{ category.title }}</a>

                                                </h3>
                                            </div>

                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ knp_pagination_render(categories) }}
        {% endif %}
    </div>
    <!-- /.container -->

{% endblock %}