{% extends 'base.html.twig' %}
{% block inner_content %}
    <!-- Page Content -->
    {% block website_title %}
        <meta name="title" content="{{"دسوق اونلاين | عقارات"~' | '~realestate.title}}"/>
    {% endblock %}
    {% block website_description %}
        <meta name="description" content="{{ realestate.description|striptags }}"/>
    {% endblock %}
    {% block og_image %}
        <meta property="og:image" content="{{ app.request.uriForPath( realestate.getWebPath()) }}"/>
        {#<meta property="og:image:secure_url" content="{{ app.request.uri }}"/>#}
    {% endblock %}
    {% block og_title %}
        <meta property="og:title"
              content="{{"دسوق اونلاين | عقارات"~' | '~realestate.title}}"/>
    {% endblock %}
    {% block og_description %}
        <meta property="og:description" content="{{ realestate.description|striptags }}"/>
    {% endblock %}
    {% block og_author %}
        {#<meta property="article:author" content="{{ product.vendorProductCategory.vendor.title }}"/>#}
    {% endblock %}
    {% block og_type %}
        <meta property="og:type" content="article"/>
    {% endblock %}
    <div id="mall_category" class="real_estate_show">
        <div class="row">
            {{ render(controller('DesoukOnlineRealEstateBundle:Front:sideFilter', { 'purpose': realestate.purpose,'type': realestate.type,'area': realestate.area })) }}
            <div class="reaestate_items col-md-9">
                <div class="center"><h3>{{ realestate.title }}</h3></div>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <div class="reaestate_item apps container">
                            <div class="reaestate_item_inner">
                                <div class="realestate_properities">
                                    {% if realestate.price %}
                                        <div class="text-right width_49 inline_block">السعر</div>
                                        <div class="text-left width_49 inline_block">
                                            <span class="big-price">{{ realestate.price }} جنية</span>
                                        </div>
                                        <hr>
                                    {% endif %}

                                    {% if realestate.type %}
                                        <div class="text-right width_49 inline_block">النوع</div>
                                        <div class="text-left width_49 inline_block">
                                            <span class="">{{ realestate.type }}</span>
                                        </div>
                                        <hr>
                                    {% endif %}

                                    {% if realestate.purpose %}
                                        <div class="text-right width_49 inline_block">الغرض</div>
                                        <div class="text-left width_49 inline_block">
                                            <span class="">{{ realestate.purpose }}</span>
                                        </div>
                                        <hr>
                                    {% endif %}

                                    {% if realestate.area %}
                                        <div class="text-right width_49 inline_block">المنطقة</div>
                                        <div class="text-left width_49 inline_block">
                                            <span class="">{{ realestate.area.name }}</span>
                                        </div>
                                        <hr>
                                    {% endif %}
                                    <div class="realestate_summary">
                                        {{ realestate.description|raw }}
                                    </div>
                                    <hr>
                                    {% include 'horizontal_social.html.twig' %}
                                    <hr>
                                    <div class="desouk_online_rating">
                                        {{ ("realestate_"~realestate.id)|show_rating|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if has_slider %}

                        <div class="col-md-6">
                            <div class="product_gallery">
                                <a class="gallery"
                                   href="{{ (realestate.path())?realestate.getWebPath():asset('images/default/default_real_estate_image.png') }}"
                                   rel="group" data-rel="prettyPhoto[gallery]1"
                                   title="">

                                    <img src="{{ (realestate.path())?realestate.getWebPath():asset('images/default/default_real_estate_image.png') }}">

                                </a>
                                {% for image in realestate.images %}
                                    <a class="gallery" style="display: none"
                                       href="{{ (image.path())?image.getWebPath():asset('images/default/default_real_estate_image.png') }}"
                                       rel="group" data-rel="prettyPhoto[gallery]1"
                                       title="">
                                        <img src="{{ (image.path())?image.getWebPath():asset('images/default/default_product_image.png') }}">

                                    </a>
                                {% endfor %}
                            </div>
                            <div class="center">اضغط هنا لمشاهدة الصور كاملة</div>
                        </div>


                    {% else %}
                        <div class="center">
                            <img src="{{ asset('images/default/default_product_image.png') }}"/>
                        </div>
                    {% endif %}
                </div>
                <!--/.portfolio-item-->
            </div>
        </div>
        <!--/.box-->
        <!--/.container-->
    </div>
{% endblock %}
